<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#1F4E4A"
                android:endColor="#4A7E4C"
                android:angle="270"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:id="@+id/circle">
            <solid android:color="#34EBCF"/>
            <size android:height="100dp" android:width="100dp"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
</layer-list>