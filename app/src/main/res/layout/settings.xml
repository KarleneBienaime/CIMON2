<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/cimon_colors">


    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/audioValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Audio"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="151dp" />

    <TextView
        android:id="@+id/control_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Volume Control"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="222dp" />

    <SeekBar
        android:id="@+id/seekBar_luminosite"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:maxWidth="15dp"
        android:maxHeight="15dp"
        android:minWidth="15dp"
        android:minHeight="10dp"
        android:progress="50"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/oval"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="278dp" />

    <ToggleButton
        android:id="@+id/audioToggleButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:textOff="Unmute"
        android:textOn="Mute"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="151dp" />

    <TextView
        android:id="@+id/blindMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Blind Mode"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="333dp" />

    <Button
        android:id="@+id/blind0"
        android:background="@drawable/btn_bg"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:text="None"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="572dp"
        tools:layout_editor_absoluteY="568dp"/>

    <Button
        android:id="@+id/blind1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:text="Trianopia"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/blind2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:text="Deuteranopia"
        android:textSize="8sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/blind3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:text="Protanopia"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="392dp" />


    <TextView
        android:id="@+id/soundEffects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Sound Effects"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="488dp" />

    <Button
        android:id="@+id/effectsBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:text="Effects"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="488dp" />

    <TextView
        android:id="@+id/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="Dark Mode"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="568dp" />

    <ToggleButton
        android:id="@+id/dark_mode"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintVertical_bias="0.638"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:textOff="on"
        android:textOn="off"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="568dp" />


</androidx.constraintlayout.widget.ConstraintLayout>