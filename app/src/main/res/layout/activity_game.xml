<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homecimon">


    <Button
        android:id="@+id/Red_Button"
        android:layout_width="215dp"
        android:layout_height="80dp"
        android:background="@drawable/triangle_shape"
        android:elevation="8dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <Button
        android:id="@+id/Yellow_Button"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginStart="224dp"
        android:background="@drawable/triangle_shape"
        android:elevation="8dp"
        android:importantForAccessibility="no"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <Button
        android:id="@+id/Purple_Button"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginEnd="224dp"
        android:background="@drawable/triangle_shape"
        android:elevation="8dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <Button
        android:id="@+id/Done_Button"
        android:layout_width="135.9dp"
        android:layout_height="82dp"
        android:background="#FAD488"
        android:elevation="8dp"
        android:fontFamily="@font/cimoncarrot"
        android:text="@string/save"
        android:textColor="#827717"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <Button
        android:id="@+id/Blue_Button"
        android:layout_width="215dp"
        android:layout_height="80dp"
        android:background="@drawable/triangle_shape"
        android:elevation="8dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/Back_Button"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:background="#FAD488"
        android:elevation="8dp"
        android:fontFamily="@font/cimoncarrot"
        android:text="@string/backy"
        android:textColor="#827717"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

</androidx.constraintlayout.widget.ConstraintLayout>