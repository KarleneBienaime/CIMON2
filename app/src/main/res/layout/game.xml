<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">


    <View
        android:id="@+id/black_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="416dp"
        android:layout_height="500dp"
        android:background="@drawable/black"
        android:text="C"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="125dp" />

    <Button
        android:id="@+id/red_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/red"
        android:backgroundTint="@drawable/red"
        android:text="R"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/yellow_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/yellow"
        android:text="Y"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/purple_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/purple"
        android:text="P"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/green_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/green"
        android:text="G"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="428dp" />

    <Button
        android:id="@+id/blue_square"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.548"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.638"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/blue"
        android:text="B"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="328dp" />

    <View
        android:id="@+id/Pause"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.952"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.14"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/pause"
        android:contentDescription="Pause"
        android:onClick="Click"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="50dp" />

    <View
        android:id="@+id/About"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.047"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.14"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/question_mark"
        android:contentDescription="About"
        android:onClick="Click"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>