<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cimon_colors">

    <ImageView
        android:id="@+id/edit_profile_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/face"
        android:gravity="center"
        android:contentDescription="@string/picture" />

    <TextView
        android:id="@+id/profile_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/Profile_Name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/Accuracy"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/profile_main"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:padding="30dip"
        android:text="@string/Accuracy"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/background_bar1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/profile_main"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/Accuracy"
        android:background="@drawable/stats_progress"
        android:indeterminate="true"
        android:max="100"
        android:progress="55" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_main"
        android:layout_marginStart="73dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/Accuracy"
        android:text="@string/percentage"
        android:textColor="@color/white"
        android:textSize="23sp"
        >

    </TextView>


    <TextView
        android:id="@+id/Time"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/Accuracy"
        android:layout_marginTop="27dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:padding="27dip"
        android:text="@string/Time"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/background_bar2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/Accuracy"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/Time"
        android:background="@drawable/stats_progress"
        android:indeterminate="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Accuracy"
        android:layout_marginStart="73dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/Time"
        android:text="@string/percentage"
        android:textColor="@color/white"
        android:textSize="23sp"
        >
    </TextView>

    <TextView
        android:id="@+id/Attention"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/Time"
        android:layout_marginTop="27dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:padding="30dip"
        android:text="@string/Attention_Span"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/background_bar3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/Attention"
        android:layout_below="@id/Time"
        android:background="@drawable/stats_progress"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Time"
        android:layout_marginStart="73dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/Attention"
        android:text="@string/percentage"
        android:textColor="@color/white"
        android:textSize="23sp"
        >
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Logout_Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/Attention"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:text="@string/Logout"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>